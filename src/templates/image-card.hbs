<!-- Шаблон элемента галереи изображений -->

{{#each hits}}
<li class="gallery-item">
  <div class="photo-card">
    <img class="card-image" src="{{this.webformatURL}}" alt="#" />
    <div class="stats">
      <p class="stats-item">
        <i class="material-icons">
          thumb_up
        </i>
        {{this.likes}}
      </p>
      <p class="stats-item">
        <i class="material-icons">
          visibility
        </i>
        {{this.views}}
      </p>
      <p class="stats-item">
        <i class="material-icons">
          comment
        </i>
        {{comments}}
      </p>
      <p class="stats-item">
        <i class="material-icons">
          cloud_download
        </i>
        {{downloads}}
      </p>
    </div>
  </div>
</li>
{{/each}}